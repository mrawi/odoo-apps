<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="stock_warehouse_access_user" model="ir.rule">
        <field name="name">Stock Warehouse Access: User</field>
        <field name="model_id" ref="stock.model_stock_warehouse"/>
        <field name="active" eval="True"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force">[('allowed_user_ids', 'in', user.id)]</field>
        <field name="groups" eval="[Command.link(ref('stock.group_stock_user'))]"/>
    </record>

    <record id="stock_picking_access_user" model="ir.rule">
        <field name="name">Stock Picking Type Access: User</field>
        <field name="model_id" ref="stock.model_stock_picking_type"/>
        <field name="active" eval="True"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="domain_force">[('warehouse_id.allowed_user_ids', 'in', user.id)]</field>
        <field name="groups" eval="[Command.link(ref('stock.group_stock_user'))]"/>
    </record>

    <record id="stock_location_access_user" model="ir.rule">
        <field name="name">Stock Location Access: User</field>
        <field name="model_id" ref="stock.model_stock_location"/>
        <field name="active" eval="True"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <!-- Allow to see virtual locations, e.g., 'Physical Locations' , 'Partners', etc.
             by `adding warehouse_id = False`
             Useful for example when making a product replenishment. -->
        <field name="domain_force">['|', ('warehouse_id.allowed_user_ids', 'in', user.id), ('warehouse_id', '=', False)]</field>
        <field name="groups" eval="[Command.link(ref('stock.group_stock_user'))]"/>
    </record>

